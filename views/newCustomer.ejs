<%- include('partials/head.ejs') %>

<!-- Login Page -->
<div class="container">
  <br />
  <br />
  <!-- fullname
  isMarried
  isEmployed
  employerName
  birthdate
  address
  phone
  cardType
  cardNumber -->
  <div class="auth-layout col-6 m-auto">
    <div class="d-flex justify-content-between">
      <h4>Register Customer</h4>
    </div>
    <div class="card card-body">
      <div class="d-flex justify-content-between"></div>
      <br />
      <p>Provide all required information</p>

      <form action="/customers" method="post">
        <div class="mb-3">
          <label for="fullname" class="form-label">Full Name</label>
          <input
            type="text"
            name="fullname"
            class="form-control"
            id="fullname"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="birthdate" class="form-label"
            >Date of Birth</label
          >
          <input
            type="date"
            name="birthdate"
            class="form-control"
            id="birthdate"
            aria-describedby="emailHelp"
          />
        </div>

        <div class="mb-3">
          <label class="form-check-label" >
            Is customer <b> married ?</b>
          </label>
          <br />
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="isMarried"
              id="marriedYes"
              value="true"
            />
            <label class="form-check-label" for="marriedYes">Yes</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="isMarried"
              id="married-no"
              value="false"
            />
            <label class="form-check-label" for="married-no">No</label>
          </div>
        </div>
        <div class="mb-3">
            <label class="form-check-label" for="disabledFieldsetCheck">
              Is customer  <b>employed ?</b>
            </label>
            <br />
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="isEmployed"
                id="emploted-yes"
                value="true"
              />
              <label class="form-check-label" for="emploted-yes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="isEmployed"
                id="inlineRadio2"
                value="false"
              />
              <label class="form-check-label" for="inlineRadio2">No</label>
            </div>
          </div>
    
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >If employed, Privide Employer name</label
          >
          <input
            type="text"
            name="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
          />
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
              type="text"
              name="address"
              class="form-control"
              id="address"
              aria-describedby="emailHelp"
            />
          </div>

          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input
              type="text"
              name="phone"
              class="form-control"
              id="phone"
              aria-describedby="emailHelp"
            />
          </div>

          <div class="mb-3">
            <label for="cardType" class="form-label">Select ID Card Type</label>
            <select id="cardType" class="form-select" name="cardType" aria-label="Default select example">
                <% cardTypeList.forEach((type) => { %>
                <option value="<%- type.field %>"><%- type.name %></option>
               <% }) %>
              </select>
          </div>
          <div class="mb-3">
            <label for="cardNumber" class="form-label">Card Number</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="cardNumber"
              aria-describedby="emailHelp"
            />
          </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>
</div>
